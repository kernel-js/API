{
  "name": "@kernel-js/api",
  "version": "0.1.0",
  "description": "Package to easily develop REST API following JSON API specification.",
  "main": "./dist/index.js",
  "module": "./es6/index.js",
  "scripts": {
    "watch": "tsc -w",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kernel-js/api.git"
  },
  "author": "Carlos Henrique Escouto <carloshenriqueescouto@gmail.com>",
  "contributors": [
    "Gus <gus@brid-it.com>",
    "Bruno Santos <bruno.dos1997@gmail.com>"
  ],
  "keywords": [
    "kernel",
    "kernel-framework",
    "orm",
    "jsonAPI",
    "request",
    "requests",
    "API"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kernel-js/api/issues"
  },
  "homepage": "https://github.com/kernel-js/api#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/lodash": "^4.14.120",
    "chai": "^4.1.2",
    "chai-http": "^4.2.1",
    "cross-env": "^5.1.4",
    "mocha": "^5.0.4",
    "rimraf": "^2.6.3",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "@kernel-js/exceptions": "^1.0.4",
    "@kernel-js/serializer": "^1.0.0",
    "axios": "^0.18.0"
  }
}
